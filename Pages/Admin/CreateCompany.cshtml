@page
@model CreateCompany

@{
    ViewData["Title"] = "Create company";
    Layout = "Shared/_AdminLayout";
}
<html>
<body>
<div>
    <div class="row align-items-center">
        <div class="mx-auto col-10 col-md-8 col-lg-6">
            <form method="post">
                <div class="form-group mb-4 mt-4">
                    <label for="name">Company name:</label>
                    <input
                        type="text"
                        class="form-control"
                        placeholder="Company name..."
                        asp-for="CompanyModel.Name"
                        id="name"/>
                </div>
                <div class="form-group mb-4">
                    <label>Description:</label>
                    <textarea class="form-control" asp-for="CompanyModel.Description" placeholder="Description of the company... "></textarea>
                </div>

                <div class="form-group mb-4">
                    <label for="address">Employees:</label>
                    <input
                        type="number"
                        class="form-control"
                        id="employees"
                        placeholder="10"
                        asp-for="CompanyModel.Employees"/>
                </div>

                <div class="form-group mb-4">
                    <label for="address">Address:</label>
                    <input
                        type="tesxt"
                        class="form-control"
                        id="address"
                        placeholder="St. StreetName..."
                        asp-for="CompanyModel.Address"/>
                </div>
                <div class="form-group mb-4">
                    <input id="checkbox" type="checkbox" asp-for="CompanyModel.Hiring" class="form-check-input"/>
                    <label class="form-check-label" for="hiring">Hiring</label>

                    <span asp-validation-for="CompanyModel.Hiring" id="hiring" class="text-danger"></span>
                </div>

                <button class=" px-4 rounded-xl text-white py-3 inline-flex items-center justify-center bg-blue-500">Save</button>

            </form>
            <!-- Form end -->
        </div>
    </div>
</div>

</body>
</html>