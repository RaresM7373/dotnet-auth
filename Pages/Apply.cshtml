@page
@model Apply

@{
    ViewData["Title"] = "Apply to this Job";
}

<html>
<body>
<div>
    <div class="row align-items-center">
        <div class="mx-auto col-10 col-md-8 col-lg-6">
            <form method="post">
                <div class="form-group mb-4 mt-4">
                    <label for="name">Email:</label>
                    <input
                        type="email"
                        class="form-control"
                        placeholder="Email address"
                        id="name" asp-for="ApplicationModel.Email"/>
                </div>


                <div class="form-group mb-4">
                    <label for="phone">Phone:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="phone"
                        placeholder="Experience level ... "
                        asp-for="ApplicationModel.PhoneNumber"/>
                </div>

                <div class="form-group mb-4">
                    <label>Cover letter:</label>
                    <textarea class="form-control" asp-for="ApplicationModel.CoverLetter" placeholder="Why are you god for this "></textarea>
                </div>


                <button class=" px-4 rounded-xl text-white py-3 inline-flex items-center justify-center bg-blue-500">Apply!</button>

            </form>
            <!-- Form end -->
        </div>
    </div>
</div>


</body>
</html>